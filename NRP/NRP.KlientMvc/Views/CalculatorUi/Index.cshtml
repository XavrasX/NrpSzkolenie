
@{
    ViewBag.Title = "Index";
}

<h2>Calculator</h2>
<form>
    <input type="text" id="left" value="12" />
    <input type="text" id="right" value="14" />
    <select id="operation">
        <option>Add</option>
        <option>Sub</option>
        <option>Mul</option>
        <option>Div</option>
    </select>
    <input type="button" id="calc" value="Calculate" />
</form>
<h2 id="result"></h2>
<script src="~/Scripts/jquery-3.3.1.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        var routeUrl = '@Url.Content("~/")';
        $("#calc").click(function () {
            var left = document.getElementById("left");
            var right = document.getElementById("right");
            var operation = document.getElementById("operation").value;
            //var rq = 'http://localhost:61884/c/' + left.value + '/' + operation + '/' + right.value;
            var rq = routeUrl+'c/' + left.value + '/' + operation + '/' + right.value;

            $.get(rq, function(data, status){
                console.log(data);
                console.log(status);
                $("#result").text(data.Result);
            });

        });
    });
</script>

